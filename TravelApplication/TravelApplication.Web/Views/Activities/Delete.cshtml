@model TravelApplication.Domain.DTO.ActivityDTO

@{
    ViewData["Title"] = "Delete Activity";
}

<h2>Are you sure you want to delete this activity?</h2>

<div class="container">
    <dl class="row">
        <dt class="col-sm-3">Name:</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Date:</dt>
        <dd class="col-sm-9">@Model.Date.ToString("d")</dd>

        <dt class="col-sm-3">Location:</dt>
        <dd class="col-sm-9">@Model.Location</dd>

        <dt class="col-sm-3">Cost:</dt>
        <dd class="col-sm-9">@Model.Cost.ToString("C")</dd>

        <dt class="col-sm-3">Duration (Hours):</dt>
        <dd class="col-sm-9">@Model.DurationHours</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
