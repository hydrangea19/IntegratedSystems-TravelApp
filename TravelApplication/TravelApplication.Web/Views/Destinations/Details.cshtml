@using TravelApplication.Domain.DTO;
@model DestinationDTO

@{
    ViewData["Title"] = "Destination Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Model.Name</h2>
        <a asp-action="Create" asp-controller="Accommodations" class="btn btn-success">+ Add Accommodation</a> 
    </div>

    <div class="card shadow-lg">
        <div class="card-body">
            <h5 class="card-title"><strong>Location:</strong> @Model.Country</h5>
            <p class="card-text"><strong>Description:</strong> @Model.Description</p>

            <div class="d-flex justify-content-between mt-3">
                <a asp-action="Edit" asp-route-id="@Model.TravelId" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.TravelId" class="btn btn-danger">Delete</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>

        <h3 class="mt-5">Available Accommodations</h3>
    @if (Model.Accommodations != null && Model.Accommodations.Any())
    {
        <div class="row">
            @foreach (var accommodation in Model.Accommodations)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@accommodation.Name</h5>
                            <p class="card-text"><strong>Type:</strong> @accommodation.Type</p>
                            <p class="card-text text-success"><strong>Price Per Night:</strong> $@accommodation.price</p>

                            <div class="d-flex justify-content-between">
                                <a asp-action="Details" asp-controller="Accommodations" asp-route-id="@accommodation.Id" class="btn btn-info">View Details</a>
                                <a asp-action="Edit" asp-controller="Accommodations" asp-route-id="@accommodation.Id" class="btn btn-warning">Edit</a>
                                <a asp-action="Delete" asp-controller="Accommodations" asp-route-id="@accommodation.Id" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">No accommodations available for this destination.</p>
    }
</div>
