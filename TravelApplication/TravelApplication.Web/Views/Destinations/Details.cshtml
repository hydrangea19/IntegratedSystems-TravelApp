@using TravelApplication.Domain.DTO;
@model DestinationDTO

@{
    ViewData["Title"] = "Destination Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Model.Name</h2>
        <a asp-action="Create" asp-controller="Accommodations" class="btn btn-success">+ Add Accommodation</a>
    </div>

    <div class="card shadow-lg">
        <div class="card-body">
            <h5 class="card-title"><strong>Location:</strong> @Model.Country</h5>
            <p class="card-text"><strong>Description:</strong> @Model.Description</p>

            <div class="d-flex justify-content-between mt-3">
                <a asp-action="Edit" asp-route-id="@Model.TravelId" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.TravelId" class="btn btn-danger">Delete</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>

    
    <h3 class="mt-5">Available Accommodations</h3>
    @if (Model.Accommodations != null && Model.Accommodations.Any())
    {
        <div class="row">
            @foreach (var accommodation in Model.Accommodations)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@accommodation.Name</h5>
                            <p class="card-text"><strong>Type:</strong> @accommodation.Type</p>
                            <p class="card-text text-success"><strong>Price Per Night:</strong> $@accommodation.price</p>

                            <div class="d-flex justify-content-between">
                                <a asp-action="Details" asp-controller="Accommodations" asp-route-id="@accommodation.Id" class="btn btn-info">View Details</a>
                                <a asp-action="Edit" asp-controller="Accommodations" asp-route-id="@accommodation.Id" class="btn btn-warning">Edit</a>
                                <a asp-action="Delete" asp-controller="Accommodations" asp-route-id="@accommodation.Id" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">No accommodations available for this destination.</p>
    }
    
    <h3 class="mt-5">Available Activities</h3>
    @if (Model.Activities != null && Model.Activities.Count > 0)
    {
        <div class="row">
            @foreach (var activity in Model.Activities)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@activity.Name</h5>
                            <p class="card-text"><strong>Description:</strong> @activity.Description</p>
                            <p class="card-text"><strong>Location:</strong> @activity.Location</p>
                            <p class="card-text text-primary"><strong>Cost:</strong> $@activity.Cost</p>
                            <p class="card-text"><strong>Duration:</strong> @activity.DurationHours hours</p>

                            <div class="d-flex justify-content-between">
                                <a asp-action="Details" asp-controller="Activities" asp-route-id="@activity.Id" class="btn btn-info">View Details</a>
                                <a asp-action="Edit" asp-controller="Activities" asp-route-id="@activity.Id" class="btn btn-warning">Edit</a>
                                <a asp-action="Delete" asp-controller="Activities" asp-route-id="@activity.Id" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">No activities available for this destination.</p>
    }

    
    <h3 class="mt-5">Available Transport</h3>
    @if (Model.Transports != null && Model.Transports.Count > 0)
    {
        <div class="row">
            @foreach (var transport in Model.Transports)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@transport.Type</h5>
                            <p class="card-text"><strong>Departure:</strong> @transport.DeparturePoint</p>
                            <p class="card-text"><strong>Arrival:</strong> @transport.ArrivalPoint</p>
                            <p class="card-text"><strong>Departure Time:</strong> @transport.DepartureTime</p>
                            <p class="card-text"><strong>Arrival Time:</strong> @transport.ArrivalTime</p>
                            <p class="card-text text-success"><strong>Cost per Passenger:</strong> $@transport.CostPerPassenger</p>

                            <div class="d-flex justify-content-between">
                                <a asp-action="Details" asp-controller="Transports" asp-route-id="@transport.Id" class="btn btn-info">View Details</a>
                                <a asp-action="Edit" asp-controller="Transports" asp-route-id="@transport.Id" class="btn btn-warning">Edit</a>
                                <a asp-action="Delete" asp-controller="Transports" asp-route-id="@transport.Id" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">No transport options available for this destination.</p>
    }
    