@model TravelApplication.Domain.DTO.DestinationDTO

@{
    ViewData["Title"] = "Delete Destination";
}

<div class="container mt-4">
    <h2 class="text-danger">Delete Destination</h2>
    <h3>Are you sure you want to delete this destination?</h3>

    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text"><strong>Country:</strong> @Model.Country</p>
            <p class="card-text"><strong>Description:</strong> @Model.Description</p>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="TravelId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>