@using TravelApplication.Domain.DTO;
@model AccommodationDTO

@{
    ViewData["Title"] = "Delete Accommodation";
}

<div class="container mt-4">
    <h2 class="text-danger text-center">Are you sure you want to delete this accommodation?</h2>
    <div class="card shadow-lg mt-3">
        <div class="card-body">
            <h5 class="card-title"><strong>Name:</strong> @Model.Name</h5>
            <p class="card-text"><strong>Type:</strong> @Model.Type</p>
            <p class="card-text"><strong>Price Per Night:</strong> $@Model.price</p>
            <p class="card-text"><strong>Destination:</strong> @Model.DestinationId</p>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Confirm Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
