@using TravelApplication.Domain.DTO;
@model AccommodationDTO

@{
    ViewData["Title"] = "Add New Accommodation";
}

<div class="container mt-4">
    <h2 class="text-center">Add a New Accommodation</h2>
    <form asp-action="Create" method="post" class="mt-4">
        <div class="mb-3">
            <label class="form-label">Accommodation Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter accommodation name" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Type</label>
            <input asp-for="Type" class="form-control" placeholder="Hotel, Resort, Airbnb, etc." required />
        </div>

        <div class="mb-3">
            <label class="form-label">Price Per Night</label>
            <input asp-for="price" type="number" step="0.01" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Destination</label>
            <select asp-for="DestinationId" class="form-control" asp-items="ViewBag.Destinations">
                <option value="">-- Select a destination --</option>
            </select>
            <span asp-validation-for="DestinationId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Add Accommodation</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
