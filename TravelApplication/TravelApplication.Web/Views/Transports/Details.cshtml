@model TravelApplication.Domain.DTO.TransportDTO

@{
    ViewData["Title"] = "Transport Details";
}

<h2>Transport Details</h2>

<div class="container">
    <dl class="row">
        <dt class="col-sm-3">Type:</dt>
        <dd class="col-sm-9">@Model.Type</dd>

        <dt class="col-sm-3">Departure Point:</dt>
        <dd class="col-sm-9">@Model.DeparturePoint</dd>

        <dt class="col-sm-3">Arrival Point:</dt>
        <dd class="col-sm-9">@Model.ArrivalPoint</dd>

        <dt class="col-sm-3">Departure Time:</dt>
        <dd class="col-sm-9">@Model.DepartureTime.ToString("g")</dd>

        <dt class="col-sm-3">Arrival Time:</dt>
        <dd class="col-sm-9">@Model.ArrivalTime.ToString("g")</dd>

        <dt class="col-sm-3">Cost Per Passenger:</dt>
        <dd class="col-sm-9">@Model.CostPerPassenger.ToString("C")</dd>
    </dl>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
