@model IEnumerable<TravelApplication.Domain.DTO.TransportDTO>

@{
    ViewData["Title"] = "Transports";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Transport List</h2>
        <a asp-action="Create" class="btn btn-success">+ Add New Transport</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Type</th>
                <th>Departure</th>
                <th>Arrival</th>
                <th>Departure Time</th>
                <th>Arrival Time</th>
                <th>Cost Per Passenger</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Type</td>
                    <td>@item.DeparturePoint</td>
                    <td>@item.ArrivalPoint</td>
                    <td>@item.DepartureTime.ToString("g")</td>
                    <td>@item.ArrivalTime.ToString("g")</td>
                    <td>@item.CostPerPassenger.ToString("C")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">View</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
